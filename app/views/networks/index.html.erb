<div class="pad-10-15-0">
  <h2 style="padding-bottom: 7px; border-bottom: 1px solid #e8e8e8">Your networks</h2>
</div>
<div class="pad-15-15"><!-- put this into a partial -->
  <% if @networks.blank? %>
    <p>Looks like you don't have any networks! Go and <%= link_to "create a new network.", new_network_path %>
  <% else %>
    <% @networks.reverse.each do |n| %>
    <div class="activity-box no-border no-padding-top">
      <div class="activity-content big-text" style="margin-left: 15px">
        <b><%= link_to n.title, network_path(n) %></b>
        <% if n.description.empty? %>
          <div class="gray medium" style="padding: 3px;"><em><%= link_to "Add a description", edit_network_path(n), class: "description" %></em></div>
        <% else %>
          <div class="gray medium" style="padding: 3px"><%= n.description %></div>
        <% end %>
      </div> <!-- //activity-content -->
    </div> <!-- //activity-box -->
    <% end %>
  <% end %>
</div> <!-- //pad-10-15 -->  

