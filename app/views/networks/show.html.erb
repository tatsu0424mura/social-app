<div class="pad-10-15-0">
  <h2 style="padding-bottom: 7px; border-bottom: 1px solid #e8e8e8">Your <%= @network.title %> network
    <span class="remove-link"><%= link_to "Remove yourself", "/remove/#{@network.id}" %></span>
    <span class="edit-link"><%= link_to "Edit", edit_network_path(@network)%></span></h2>
</div>


<% @network.users.each do |user| %>
<div class="pad-15-15-0-15">
  <div class="activity-box border-bottom no-padding-top">
    <div class="person-image">
      <div class="img"><%= image_tag user.image %></div>
      </div>
      <div class="activity-content big-text" style="border-left: none; padding: 2px 0">
        <b><%= user.name %></b>
        <div class="social-links" style="float: right"><%= link_to "Facebook", ("http://www.facebook.com/" << user.uid), class: "sb large facebook" %></div>
      </div>
    </div> <!-- //activity-content -->
  </div> <!-- //activity-box -->
<% end %>
</div> <!-- //pad-15-15-0-15 -->

